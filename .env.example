# Luthien Control Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://luthien:luthien_dev_password@localhost:5432/luthien_control

# Redis Configuration
REDIS_URL=redis://localhost:6379

# LiteLLM Configuration
LITELLM_MASTER_KEY=sk-luthien-dev-key
LITELLM_CONFIG_PATH=/app/config/litellm_config.yaml
LITELLM_PORT=4000
LITELLM_HOST=0.0.0.0
LITELLM_LOG_LEVEL=INFO

# Control Plane Configuration
CONTROL_PLANE_URL=http://localhost:8081
CONTROL_PLANE_PORT=8081
CONTROL_PLANE_HOST=0.0.0.0
LOG_LEVEL=INFO

# LLM Provider API Keys (add as needed)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Ollama Configuration (for local trusted models)
OLLAMA_BASE_URL=http://localhost:11434

# Alert Configuration
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
PAGERDUTY_API_KEY=your_pagerduty_api_key_here

# Development Settings
ENVIRONMENT=development
DEBUG=true
